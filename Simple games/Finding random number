import random
number=random.randint(1,10)
tries=1

name=input("Hello, what is your name?????")
print("Hello",name +".")

question=input("would you like to play this game:yes/no:")

if question=="yes":
    print("I am thinking a number between 1&10")
    guess=int(input("Guess a number:"))
    if guess<number:
        print("Guess a higher number!!!")
    if guess>number:
        print("guess a lower number!!!")

    while guess!=number:
        tries+=1
        guess=int(input("Try again...."))
        if guess<number:
            print("Guess a higher number!!!")
        if guess>number:
            print("guess a lower number!!!")

        if guess==number:
            print("Congratulations you find it at", tries,"tries!!!")
            break
else:
    print("oohhh okay.....")





